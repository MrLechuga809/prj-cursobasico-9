<resources>

    <style name="MagicTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/gris</item>
        <item name="colorPrimaryDark">@color/grisOscuro</item>
        <item name="colorAccent">@color/blanco</item>
    </style>

    <style name="DarkDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textColorAlertDialogListItem">@color/blanco</item>
        <item name="android:background">@color/gris</item>
        <item name="android:fontFamily">@font/product_sans</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Bttns">
        <item name="android:textColor">@color/blanco</item>
        <item name="android:fontFamily">@font/product_sans</item>
        <item name="android:background">@color/gris</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
